  "bugs": {
    "url": "https://github.com/asyncapi/app-relations-discovery/issues"
  },
  "homepage": "https://github.com/asyncapi/app-relations-discovery#readme",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.2.3",
